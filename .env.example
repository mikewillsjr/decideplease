# =============================================================================
# DecidePlease Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Required - Core Services
# -----------------------------------------------------------------------------

# PostgreSQL database connection string
# For local development: postgresql://codespace@/decideplease?host=/var/run/postgresql
# For production: Set automatically by Render or your hosting provider
DATABASE_URL=postgresql://user:password@host:5432/decideplease

# OpenRouter API key for accessing LLM models
# Get one at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# JWT secret for signing authentication tokens
# CRITICAL: Generate a secure random string for production!
# Generate with: openssl rand -hex 32
JWT_SECRET=your-secure-random-string-here

# -----------------------------------------------------------------------------
# Email Service (Resend)
# -----------------------------------------------------------------------------

# Resend API key for sending emails (password resets, purchase confirmations)
# Get one at: https://resend.com/api-keys
RESEND_API_KEY=re_your-key-here

# From email address for outgoing emails
# Must be verified in your Resend account
RESEND_FROM_EMAIL=DecidePlease <noreply@decideplease.com>

# Base URL for your app (used in email links)
APP_URL=https://decideplease.com

# -----------------------------------------------------------------------------
# Stripe Payments (Optional - for credit purchases)
# -----------------------------------------------------------------------------

# Stripe secret key
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-key-here

# Stripe price ID for credit pack product
# Create a product and price in Stripe dashboard
STRIPE_PRICE_ID=price_your-price-id-here

# Stripe webhook signing secret
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-secret-here

# What appears on customer credit card statements (max 22 chars)
STRIPE_STATEMENT_DESCRIPTOR=DECIDEPLEASE

# Credits per purchase (default: 20)
CREDITS_PER_PURCHASE=20

# Display price (for UI only)
PRICE_DISPLAY=$5.00

# -----------------------------------------------------------------------------
# Admin Access
# -----------------------------------------------------------------------------

# Comma-separated list of email addresses with admin access
ADMIN_EMAILS=admin@example.com,another-admin@example.com

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------

# Allowed origins for CORS (comma-separated)
# Development: http://localhost:5173,http://localhost:3000
# Production: https://decideplease.com,https://www.decideplease.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------------------------------------------------------------------
# Development Settings (DO NOT USE IN PRODUCTION)
# -----------------------------------------------------------------------------

# Set to "true" to bypass authentication checks locally
# WARNING: Never enable in production!
DEVELOPMENT_MODE=false

